
<!DOCTYPE html>
<html>
<head>
    <title>AliExpress Orders</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .order { border: 1px solid #ccc; margin: 10px; padding: 10px; display: flex; align-items: center; }
        .order img { max-width: 100px; margin-right: 15px; }
        .order-info { flex: 1; }
    </style>
</head>
<body>
    <h1>AliExpress Orders</h1>
    <% if (orders && orders.length) { %>
        <% orders.forEach(order => { %>
            <div class="order">
                <% if (order.imageUrl) { %>
                    <img src="<%= order.imageUrl %>" alt="Order image">
                <% } %>
                <div class="order-info">
                    <strong>Name:</strong> <%= order.name %><br>
                    <strong>Date:</strong> <%= order.date %><br>
                    <strong>Price:</strong> <%= order.price %> <%= order.currency %><br>
                    <strong>Store:</strong> <%= order.storeName %><br>
                    <a href="/orders/<%= order.orderId %>">Details</a>
                    <% if (order.detailUrl) { %>
                        | <a href="<%= order.detailUrl %>" target="_blank">AliExpress</a>
                    <% } %>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <p>No orders found.</p>
    <% } %>
</body>
</html>